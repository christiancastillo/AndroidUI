<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slideLayoutRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlideLayout">

    <ImageView
        android:id="@+id/slideLayoutImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_logo_splash" />

    <TextView
        android:id="@+id/slideLayoutv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slideLayoutImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/intro_bienvenido"
        android:textColor="@color/primaryTextColor" />

    <TextView
        android:id="@+id/slideLayoutv2"
        android:layout_below="@id/slideLayoutv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="A mi APP"
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/slideLayoutPointOne"
        android:layout_below="@id/slideLayoutv1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="."
        android:textSize="70dp"
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/slideLayoutPointTwo"
        android:layout_below="@id/slideLayoutv1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:textSize="70dp"
        android:layout_alignLeft="@+id/slideLayoutPointOne"
        android:text="."
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/slideLayoutPointThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slideLayoutv1"
        android:layout_alignLeft="@+id/slideLayoutPointTwo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:text="."
        android:textColor="@color/primaryTextColor"
        android:textSize="70dp" />

</RelativeLayout>