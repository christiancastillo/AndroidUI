<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slideLayoutRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/slideLayoutImageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_splash"
        android:layout_height="100dp"
        android:layout_width="100dp"/>
    <TextView
        android:id="@+id/slideLayoutv1"
        android:layout_below="@id/slideLayoutImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/intro_bienvenido"
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/slideLayoutv2"
        android:layout_below="@id/slideLayoutv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/intro_bienvenido"
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>